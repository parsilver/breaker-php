{
    "name": "farzai/breaker",
    "description": "A PHP circuit breaker implementation for resilient applications",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Farzai\\Breaker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Farzai\\Breaker\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.5",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28",
        "phpstan/phpstan": "^1.10 || ^2.0"
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "phpstan": "vendor/bin/phpstan analyse src tests"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}